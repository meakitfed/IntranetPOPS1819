@using IntranetPOPS1819.Models
@model IntranetPOPS1819.ViewModel.OngletNoteDeFraisViewModel
@{
	ViewBag.Title = "Note De Frais";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Profil</title>
	<link rel="stylesheet" href="node_modules/octicons/build/font/octicons.css">
</head>
<body>
	@Html.Partial("../Shared/Navbar")
	<div>
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-3 table-bordered">
					<h2>Historique Notes de Frais</h2>
					@Model.Collaborateur.Mail

					@Model.Collaborateur.NotesDeFrais.Count
					@foreach (NoteDeFrais n in Model.Collaborateur.NotesDeFrais)
					{
						<button>
							@n.Date.Month @(n.Actif ? " - Actif" : "")
						</button>
					}
				</div>
				<div class="col-md-6">
					<h1>Notes de Frais : TODO Date Dynamique</h1>
					<div class="row">
						TODO informations des lignes
					</div>
				</div>
				<div class="col-md-3">
					@using (Html.BeginForm())
					{
						<div>
							@Html.LabelFor(m => m.Frais.Nom);
							@Html.TextBoxFor(m => m.Frais.Nom)
							@Html.ValidationMessageFor(m => m.Frais.Nom)
						</div>
						<div>
							@Html.LabelFor(m => m.Frais.Mission)
							@Html.PasswordFor(m => m.Frais.Mission)
							@Html.ValidationMessageFor(m => m.Frais.Mission)
						</div>
						<div>
							@Html.LabelFor(m => m.Frais.Somme)
							@Html.PasswordFor(m => m.Frais.Somme)
							@Html.ValidationMessageFor(m => m.Frais.Somme)
						</div>
						<div>
							@Html.CheckBoxFor(m => m.Frais.Complete)
							@Html.LabelFor(m => m.Frais.Complete)
							@Html.ValidationMessageFor(m => m.Frais.Somme)
						</div>
						<input type="submit" value="Se connecter" />
					}
				</div>
			</div>
		</div>
	</div>

</body>
</html>
