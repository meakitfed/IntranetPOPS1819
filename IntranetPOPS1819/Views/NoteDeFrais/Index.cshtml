@using IntranetPOPS1819.Models
@using IntranetPOPS1819.ViewModel
@model IntranetPOPS1819.ViewModel.OngletNoteDeFraisViewModel
@{
	ViewBag.Title = "Note De Frais";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("../Shared/Navbar")
<div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-3 table-bordered">
				<h2>Historique Notes de Frais</h2>
				@foreach (NoteDeFrais n in Model._Collaborateur.NotesDeFrais)
				{
					<div><button>@n.Date.Month @(n.Actif ? " - Actif" : "")</button></div>
				}
			</div>
			<div class="col-md-6">
				<h1>Notes de Frais : TODO Date Dynamique</h1>
				<div class="row">
					TODO informations des lignes
				</div>
			</div>
			<div class="col-md-3">
				@using (Html.BeginForm())
				{
					<div>
						@Html.LabelFor(m => m._Frais.Nom)
						@Html.TextBoxFor(m => m._Frais.Nom)
						@Html.ValidationMessageFor(m => m._Frais.Nom)
					</div>
					<div>
						TODO Mission input
					</div>
					<div>
						@Html.LabelFor(m => m._Frais.Somme)
						@Html.TextBoxFor(m => m._Frais.Somme)
						@Html.ValidationMessageFor(m => m._Frais.Somme)
					</div>
					<div>
						@Html.CheckBoxFor(m => m._Frais.Complete)
						@Html.LabelFor(m => m._Frais.Complete)
						@Html.ValidationMessageFor(m => m._Frais.Complete)
					</div>
					<input type="submit" value="Ajouter la dépense" />
				}
			</div>
		</div>
	</div>
</div>
