@using IntranetPOPS1819.Models
@model IntranetPOPS1819.Models.LigneDeFrais


	@if (Model != null)
	{

		<h3 class="text-center table-bordered">Dépense : @Model.Date.ToString("MMMM yyyy") - @Model.Nom</h3>
		<p>Date : @Model.Date.ToString("dd MMMM yyyy")</p>
		<p>Mission associée : @if (Model.Mission != null)
		{@Model.Mission.Nom}</p>
		<p>Statut du frais : @Model.Statut</p>
		<p>Somme demandée : @Model.Somme</p>
		<p>Documents associés : TODO</p>
	}
	else
	{
		<p>Sélectionnez une ligne de frais</p>
	}
