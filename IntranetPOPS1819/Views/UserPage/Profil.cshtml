@model IntranetPOPS1819.ViewModel.CollaborateurViewModel
@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Profil</title>
    <link rel="stylesheet" href="node_modules/octicons/build/font/octicons.css">
</head>

<body>
    @Html.Partial("../Shared/Navbar")

    <div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3 table-bordered">
                    <h2>@Model._Collaborateur.Nom @Model._Collaborateur.Prenom</h2>
                    <!-- TODO : Photo de profil -->
                    <p>
                        Service : @if (@Model._Collaborateur.Service != null)
                        {@Model._Collaborateur.Service.Nom}
                    </p>
                    <p>Rôle : Collaborateur TODO</p>
                    <p><a href="mailto:@Model._Collaborateur.Mail">@Model._Collaborateur.Mail</a></p>
                    <p>Téléphone : @Model._Collaborateur.Telephone</p>
                </div>
                <div class="col-md-6">
                    <h1>Récapitulatif</h1>
                    <div class="row">
                        <div class="col-md-6">
                            <h2>Congés</h2>
                            <p>Consommés cette année : @Model._Collaborateur.GetNombreCongesPrisCetteAnnee()</p>
                            <p>Restants : @Model._Collaborateur.CongesRestants</p>
                            <p>En attente : @Model._Collaborateur.GetNombreCongesEnAttente()</p>
                            <p>Validés : @Model._Collaborateur.GetNombreCongesValidesFuturs()</p>
                        </div>
                        <div class="col-md-6">
                            <h2>Notes de frais</h2>
                            <p>Somme validée ce mois-ci : TODO</p>
                            <p>Lignes de frais en attente : TODO</p>
                            <p>Lignes de frais validées : TODO</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <h2>Service Massages</h2>
                    <input id="Username" type="text" class="form-control" />
                </div>
            </div>
        </div>
    </div>
</body>
</html>
