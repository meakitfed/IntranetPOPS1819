
@{
    ViewBag.Title = "CongesRH";
}
@(Html.Kendo().Grid<IntranetPOPS1819.ViewModel.ValidationCongesViewModel>
                            ()
                            .Name("ValiderCongesRH")
                            .Columns(columns =>
                            {
                                columns.Bound(c => c.Nom);
                                columns.Bound(c => c.Debut);
                                columns.Bound(c => c.Fin);
                                columns.Bound(c => c.Type);
                                columns.Command(command => { command.Custom("Détails").HtmlAttributes(new { @class = "btn btn-light" }).Click("showDetailsRH"); command.Custom(" Valider").IconClass("fas fa-check").HtmlAttributes(new { @class = "btn btn-success" }).Click("ValiderCRH"); command.Custom(" Refuser").IconClass("fas fa-times").HtmlAttributes(new { @class = "btn btn-danger" }).Click("RefuserCRH"); }).Width(300);
                            })
                            .Editable(editable => editable.Mode(GridEditMode.InLine)
                            .DisplayDeleteConfirmation(false))
                            .Scrollable()
                            .DataSource(dataSource => dataSource
                                .Ajax()
                                .Model(model => model.Id(p => p.Id))
                                .Read(read => read.Action("Conges_ReadRH", "RH"))
                                .Update(update => update.Action("Conges_ValidationRH", "RH"))
                                .Destroy(destroy => destroy.Action("Conges_ValidationRH", "RH"))
                            )
)

<br />
<table class="table">
    <thead>
        <tr>
            <th scope="col" class="text-center">Collaborateur</th>
            <th scope="col" class="text-center">Service</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td scope="row" id="nom">Nom : &nbsp;</td>
            <td scope="row" id="service">Nom : &nbsp;</td>
        </tr>
        <tr>
            <td scope="row">
                Congés pris cette année : <br />
                <span id="congesPris"></span>
            </td>
            <td>
                <!-- TODO : DatePicker -->
                @(Html.Kendo().DatePicker()
                            .Name("datePickerCongesRH")
                            .Value(DateTime.Today)
                )
                <button id="get" class="k-button">Get</button>
            </td>
        </tr>
        <tr>
            <td scope="row" id="journeesRestantes">Journées restantes : &nbsp;</td>
            <td>Collaborateurs Absents : <span id="test"></span></td>
            
        </tr>
        <tr>
            <td></td>
            <td>Proportion dans le service : <span id="propAbs"></span></td>
        </tr>
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $("datePickerCongesRH").kendoDatePicker()
            .closest(".k-widget")
            .attr("id", "datepicker_wrapper");

        var datepicker = $("#datePickerCongesRH").data("kendoDatePicker");


        $("#get").click(function () {
            $.get("InfosAbsents", { date: datepicker.value().toISOString(), text: document.getElementById("service").innerText}, function(data) {
                document.getElementById("test").innerHTML += data;
                
            });
            $.get("ProportionAbsents", { date: datepicker.value().toISOString(), text: document.getElementById("service").innerText }, function (data2) {
                document.getElementById("propAbs").innerHTML += data2;
            });
        });
    });

    function showDetailsRH(e) {
        e.preventDefault();

        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));

        document.getElementById("nom").innerHTML = 'Nom : &nbsp; ' + dataItem.Nom;
        document.getElementById("service").innerHTML = 'Nom : &nbsp; ' + dataItem.Service;
        document.getElementById("congesPris").innerHTML = '&nbsp; RTT : &nbsp;' + dataItem.CongesPris[0] + '<br />&nbsp; Sans solde : &nbsp;' + dataItem.CongesPris[1] + '<br />&nbsp; Absences : &nbsp;' + dataItem.CongesPris[2];
        document.getElementById("journeesRestantes").innerHTML = dataItem.CongesRestants + '&nbsp; jours';
    }
</script>

<script type="text/javascript">
    function ValiderCRH(e) {
        var grid = this;
        var row = $(e.currentTarget).closest("tr");
        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        grid.removeRow(row);
        $.ajax({
            url: 'Conges_ValidationRH',
            data: {
                nb: dataItem.Id,
                accepter: true
            }
        }).done(function () {
            alert('Added');
        });
    }

    function RefuserCRH(e) {
        var grid = this;
        var row = $(e.currentTarget).closest("tr");
        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        grid.removeRow(row);
        console.log(dataItem);
        $.ajax({
            url: 'Conges_ValidationRH',
            data: {
                nb: dataItem.Id,
                accepter: false
            }
        }).done(function () {
            alert('Added');
        });
    }
</script>

