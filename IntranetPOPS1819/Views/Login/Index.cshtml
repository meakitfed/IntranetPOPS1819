@model IntranetPOPS1819.ViewModel.CollaborateurViewModel
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!@User.Identity.IsAuthenticated)
{
	<div id="inner">
		<p>Veuillez vous authentifier :</p>
	</div>
	using (Html.BeginForm())
	{
		<div id="inner">
			<p>
				Identifiant : &nbsp;&nbsp;&nbsp;&nbsp;
				@Html.TextBoxFor(m => m._Collaborateur.Mail)
				@Html.ValidationMessageFor(m => m._Collaborateur.Mail)
			</p>
		</div>
		<div id="inner">
			<p>
				Mot de passe :
				@Html.PasswordFor(m => m._Collaborateur.MotDePasse)
				@Html.ValidationMessageFor(m => m._Collaborateur.MotDePasse)
			</p>
		</div>
		<div id="inner">
			<input type="submit" value="Se connecter" />
		</div>
	}
}

