@model IntranetPOPS1819.ViewModel.NouveauCollaborateurViewModel
@using IntranetPOPS1819.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

@Html.Partial("../Shared/Navbar")
<div class="nc1">
    <div class="nc1-h">
        <h4>Information de Nouveau Collaborateur</h4>
    </div>
    @using (Html.BeginForm())
    {
        <div align="center">
            <p>
                Prenom :&nbsp;&nbsp;
                @Html.TextBoxFor(Model => Model.Prenom)
                @Html.ValidationMessageFor(Model => Model.Prenom)
            <p>
        </div>
        <div align="center">
            <p>
                Nom : &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                @Html.TextBoxFor(Model => Model.Nom)
                @Html.ValidationMessageFor(Model => Model.Nom)
            <p>
        </div>
        <div align="center">
            <p>
                Mail : &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                @Html.TextBoxFor(Model => Model.Mail)
                @Html.ValidationMessageFor(Model => Model.Mail)
            <p>
        </div>
        <div align="center">
            <p>
                Service :
                @Html.DropDownListFor(Model => Model.Service, (new Dal()).ObtenirTousLesServices().Select(serv => new SelectListItem()
               {
                   Text = serv.Nom,
                   Value = serv.Id.ToString()
               }))
                @Html.ValidationMessageFor(Model => Model.Service)
            </p>
        </div>
        <div align="center">
            <input type="submit" value="Ajouter collabo" onclick="confirmation()" />
        </div>
        <div align="center">
            <p id="confirmMessage"></p>
        </div>
    }
</div>

<script type="text/javascript">
    function confirmation() {
        alert("Le collaborateur a bien été ajouté.");
    }
</script>